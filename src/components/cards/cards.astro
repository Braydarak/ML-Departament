---
import BtnLink from "../shared/BtnLink.astro";
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
  title?: string;
  description: string;
  image?: string;
  site: string;
  buttonText: string;
}

const { title, description, image, site, buttonText } = Astro.props;
---

<div
  class="p-5 m-5 sm:p-6 lg:p-8 max-h-xs flex-1 rounded-3xl border border-box-border bg-box-bg shadow-lg shadow-box-shadow relative w-80"
>
  <div class="flex items-center w-full">
    <h2 class="text-lg md:text-xl font-semibold text-heading-2">
      {title}
    </h2>
  </div>
  <div class="mt-2 space-y-4 relative">
    <Paragraph>
      {description}
    </Paragraph>
  </div>
  <div
    class="rounded-xl bg-gray-300 dark:bg-gray-950 p-3 text-heading-1 relative mt-2"
  >
    <slot set:html={image} />
  </div>
  <div class="flex justify-center mt-4">
    <BtnLink
      text={buttonText}
      href={site}
      className="flex justify-center w-full sm:w-max"
      variant="primary"
    />
  </div>
</div>
