---
import Cards from "../cards/cards.astro";
import Container from "../shared/Container.astro";
import { card } from "../../utils/data";
import Title from "../shared/Title.astro";
import Paragraph from "../shared/Paragraph.astro";

type CardProps = {
  title: string;
  description: string;
  image?: string;
  site: string;
  buttonText: string;
};
---

<section id="recomendations" class="pb-20">
  <div class="flex justify-center mb-5 flex-col items-center">
    <Title>Recomendaciones</Title>
    <Paragraph className="mt-8">
      Restaurantes, Pizzerias, Bares y Hamburgueserias
    </Paragraph>
  </div>
  <Container className="overflow-scroll overflow-y-hidden md:overflow-y-scroll">
    <div
      class="flex items-center overflow-x-hidden md:overflow-x-auto relative py-8 md:py-10 px-6 md:px-8 md:flex flex-col md:flex-row rounded-2xl bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 w-full md:w-fit h-[500px] md:h-auto"  
      style="
    flex-wrap: nowrap;
    
  ">
      {
        card.map((card: CardProps) => (
          <Cards
            title={card.title}
            description={card.description}
            image={card.image}
            site={card.site}
            buttonText={card.buttonText}
          />
        ))
      }
    </div>
  </Container>
</section>
